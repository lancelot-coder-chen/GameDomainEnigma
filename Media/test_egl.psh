#version 300 es
//semantic anim_time ANIM_TIMER
//semantic anim_scale ANIM_SCALE
precision mediump float;
//sampler_state samLinear DiffuseTexture
uniform sampler2D DiffuseTexture;
uniform float anim_time;
uniform float anim_scale;
in vec4 vColor;
in vec2 vTexCo;
out vec4 outColor;
void main() {
    vec2 co = vec2(vTexCo.x + anim_time, vTexCo.y);
    outColor = (0.5f + cos(anim_time * anim_scale)/2.0f) * vColor;
    outColor = texture(DiffuseTexture, co) * outColor;
}
